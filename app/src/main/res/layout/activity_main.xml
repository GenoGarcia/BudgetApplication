<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_x="0dp"
        android:layout_y="1dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Payment Amount"
                android:id="@+id/textView"
                android:layout_column="0"
                android:background="#ff070707"
                android:textColor="#FFFFFFFF"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/amount"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Food Budget"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ffceecff" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/foodBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Shelter Budget"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ffe1ffc4" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/shelterBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Utilities Budget"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ffffd99c" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/utilitiesBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Clothing Budget"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ffffbdea" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/clothingBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Transportation Budget"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ffffb9b9" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/transportationBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medical Budget"
                android:id="@+id/textView7"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ff9dffb7" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/medicalBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Personal Budget"
                android:id="@+id/textView8"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ffecc8ff" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/personalBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Savings Budget"
                android:id="@+id/textView9"
                android:layout_column="0"
                android:gravity="center_vertical"
                android:background="#ffffffc1" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/savingsBudget"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:id="@+id/budgetButton"
                android:layout_column="0"
                android:layout_span="2"
                android:textSize="40dp" />
        </TableRow>
    </TableLayout>

</AbsoluteLayout>
